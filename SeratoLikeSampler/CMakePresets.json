{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 22, "patch": 0 },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "JUCE_FETCH_VST3_SDK": "ON",
        "USE_SIGNALSMITH": "ON",
        "SIGNALSMITH_USE_PFFFT": "ON",
        "SIGNALSMITH_USE_PFFFT_DOUBLE": "OFF",
        "SIGNALSMITH_USE_IPP": "OFF"
      }
    },
    {
      "name": "windows-debug",
      "displayName": "Windows Debug (Ninja)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release (Ninja)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "windows-debug",
      "jobs": 0
    },
    {
      "name": "build-release",
      "configurePreset": "windows-release",
      "jobs": 0
    }
  ]
}

